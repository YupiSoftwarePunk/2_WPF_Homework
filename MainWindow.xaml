<Window x:Class="_2_WPF_Homework.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_2_WPF_Homework"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="0.4*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.5*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="0.4*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.5*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2">
            <TextBlock TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Center" 
                       HorizontalAlignment="Center" Margin="5"> 
                <Run FontSize="30" Foreground="#FFC85B5B" FontWeight="Bold">Регистрация</Run>
                <Run FontSize="30" Foreground="Black">сотрудников компании</Run>
            </TextBlock>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="1" Margin="8">
            <TextBlock Text="Отзывы на техподдержку" FontSize="24"/>
            <ListBox BorderThickness="0">
                <ListBoxItem>
                    <StackPanel>
                        <TextBlock Text="Дёмин Александр Ильич" FontSize="22"/>
                        <TextBlock Text="До него смогли дозвониться" FontSize="14"/>
                    </StackPanel>
                </ListBoxItem>

                <ListBoxItem>
                    <StackPanel>
                        <TextBlock Text="Павлов Анатолий Кринделёвич" FontSize="22"/>
                        <TextBlock Text="Смог дозвониться до техподдержки за 7 минут" FontSize="14"/>
                    </StackPanel>
                </ListBoxItem>

                <ListBoxItem>
                    <StackPanel>
                        <TextBlock Text="Харитонов Шамиль Ереванович" FontSize="22"/>
                        <TextBlock Text="Не довзвонился, но решил всё сам!" FontSize="14"/>
                    </StackPanel>
                </ListBoxItem>
            </ListBox>
        </StackPanel>
    </Grid>
</Window>
